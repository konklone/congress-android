<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
	>
	
	<LinearLayout
		android:id="@+id/page_container"
		
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="0dp"
		android:paddingBottom="5dp"
		
		android:orientation="vertical"
		
		>
		
		<TextView android:id="@+id/explanation_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			
			android:textSize="16sp"
			android:text="@string/explanation_1"
			/>
		
		<TextView android:id="@+id/explanation_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			
			android:layout_marginTop="15dp"
			
			android:textSize="16sp"
			android:text="@string/explanation_2"
			/>
		
		<TextView android:id="@+id/explanation_3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			
			android:layout_marginTop="15dp"
			
			android:textSize="16sp"
			android:text="@string/explanation_3"
			/>
		
		<TextView android:id="@+id/explanation_3a"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			
			android:layout_marginTop="10dp"
			
			android:textSize="16sp"
			
			android:text="Bullet 1"
			/>
		
		<TextView android:id="@+id/explanation_3b"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			
			android:layout_marginTop="10dp"
			
			android:textSize="16sp"
			
			android:text="Bullet 2"
			/>
	</LinearLayout>
</ScrollView>